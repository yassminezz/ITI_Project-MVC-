@model ItiProject_ms1.Views.ViewModel.DeptCourseViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.course.Id" />
            <div class="form-group">
                <label asp-for="@Model.course.Name" class="control-label"></label>
                <input asp-for="@Model.course.Name" class="form-control" />
                <span asp-validation-for="@Model.course.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.course.Degree" class="control-label"></label>
                <input asp-for="@Model.course.Degree" class="form-control" />
                <span asp-validation-for="@Model.course.Degree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.course.MinimumDegree" class="control-label"></label>
                <input asp-for="@Model.course.MinimumDegree" class="form-control" />
                <span asp-validation-for="@Model.course.MinimumDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.course.Hours" class="control-label"></label>
                <input asp-for="@Model.course.Hours" class="form-control" />
                <span asp-validation-for="@Model.course.Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.course.DeptId" class="control-label">Department Name </label>
                <input asp-for="@Model.course.DeptId" class="form-control" />
                <span asp-validation-for="@Model.course.DeptId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.course.InstructorId" class="control-label"></label>
                <input asp-for="@Model.course.InstructorId" class="form-control" />
                <span asp-validation-for="@Model.course.InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
