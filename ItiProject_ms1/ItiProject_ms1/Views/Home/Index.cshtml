@{
    // CRITICAL: We are using the main site layout now, so we only set the title.
    ViewData["Title"] = "Home Page";
}

<!-- Custom styles placed inside the View will be rendered inside the main layout's <head> -->
<style>
    /* CRITICAL FIX: Ensures elements break out of any max-width/padding imposed by the main layout container */
    .full-width-content {
        width: 100vw; /* Take 100% of the viewport width */
        /* Center the content and pull it left/right to fill the whole screen */
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
    }

    /* Adjust the video container height slightly to account for the persistent top navigation bar */
    .video-container {
        position: relative;
        height: 90vh; /* Use 90vh to leave room for the top nav bar, adjust as necessary */
        overflow: hidden;
    }

    #bg-video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: 0;
        transform: translate(-50%, -50%);
        object-fit: cover;
    }

    .overlay {
        position: relative;
        z-index: 1;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .content h6 {
        letter-spacing: 1px;
        margin-bottom: 1rem;
        color: white;
    }

    .content h1 {
        font-family: 'Georgia', serif;
        font-size: 3rem;
        line-height: 1.3;
        color: white;
    }

    .btn-primary {
        background-color: #0d4c73;
        border: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #136b9e;
        }

    @@media (max-width: 768px) {
        .content h1 {
            font-size: 2rem;
        }
    }

    /* ========== SECOND SECTION (Building background) ========== */
    .education-section {
        position: relative;
        background-color: #fff;
        padding: 4rem 2rem;
        /* Apply full width class definition */
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
    }

        .education-section .background-image {
            background-image: url('https://cdn.cmsfly.com/68e4b26e9a78480012a0c9b8/images/photo-1759299616010-5f7638747587-fPkmu.jpeg');
            background-size: cover;
            background-position: center;
            height: 500px;
            border-radius: 10px;
            position: relative;
            overflow: hidden;
        }

        .education-section .blue-box {
            background-color: #115c73;
            color: #fff;
            padding: 3rem;
            border-radius: 10px;
            max-width: 600px;
            position: absolute;
            top: 50%;
            left: 55%;
            transform: translateY(-50%);
            box-shadow: 0 4px 20px rgba(0,0,0,0.25);
        }

        .education-section h6 {
            font-size: 1rem;
            font-weight: 500;
            color: #b8e0f2;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .education-section h2 {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 1rem 0;
            line-height: 1.4;
        }

        .education-section p {
            font-size: 1.05rem;
            color: #eaf8ff;
        }

        .education-section .btn-light {
            background-color: #fff;
            color: #115c73;
            font-weight: 600;
            border-radius: 6px;
            margin-top: 1rem;
        }

            .education-section .btn-light:hover {
                background-color: #d9f2ff;
            }

    @@media (max-width: 992px) {
        .education-section .blue-box {
            position: static;
            transform: none;
            margin-top: 2rem;
            max-width: 100%;
        }
    }

    /* ========== FOOTER STYLES ========== */
    .main-footer {
        background-color: #f8f9fa;
        padding: 4rem 0;
        color: #343a40;
        /* Apply full width fix here */
        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
    }
    /* Rest of the footer styles... */
    .footer-logo h2 {
        font-size: 2.5rem;
        font-weight: 600;
        line-height: 1.2;
        margin-bottom: 0.5rem;
    }

    .footer-logo p {
        font-size: 1rem;
        color: #6c757d;
    }

    .contact-btn {
        background-color: #0d4c73;
        color: white;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .contact-btn:hover {
            background-color: #136b9e;
            color: white;
        }

    .footer-image-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

        .footer-image-grid .img-wrapper {
            aspect-ratio: 1 / 1;
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    .research-center-placeholder {
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-style: italic;
        color: #adb5bd;
        font-size: 0.9rem;
        border: 1px solid #dee2e6;
    }

    .footer-links-col h5, .footer-contact-col h5 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #0d4c73;
    }

    .footer-links-col ul, .footer-links-col li {
        list-style: none;
        padding: 0;
    }

    .footer-links-col a, .footer-contact-col a {
        color: #6c757d;
        text-decoration: none;
        display: block;
        margin-bottom: 0.5rem;
        transition: color 0.2s;
    }

        .footer-links-col a:hover, .footer-contact-col a:hover {
            color: #0d4c73;
        }

    .social-media a {
        font-size: 1.5rem;
        margin-right: 15px;
        color: #0d4c73;
        transition: color 0.2s;
    }

        .social-media a:hover {
            color: #136b9e;
        }

    .email-btn {
        background-color: #0d4c73;
        color: white;
        font-weight: 500;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
    }

        .email-btn:hover {
            background-color: #136b9e;
            color: white;
        }

    @@media (max-width: 1200px) {
        .footer-image-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 992px) {
        .footer-image-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .footer-image-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .footer-logo {
            margin-bottom: 2rem;
        }

        .footer-links-col {
            margin-bottom: 2rem;
        }
    }

</style>


