@model IEnumerable<ItiProject_ms1.Models.CourseStudents>

@{
    ViewData["Title"] = "Course Enrollment Records";
}

<!-- Custom Styles and Scripts for the modern look and DataTables functionality -->
<style>
    /* Base Styling to match the screenshot */
    body {
        background-color: #f7f9fc;
        font-family: Arial, sans-serif;
    }

    .main-card {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin-top: 2rem;
    }

    /* Header Styling */
    .header-content {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .header-icon {
        background-color: #5d50e6;
        color: white;
        padding: 0.5rem;
        border-radius: 50%;
        margin-right: 1rem;
        font-size: 1.5rem;
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .header-text h1 {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 0;
    }

    .header-text p {
        font-size: 0.875rem;
        color: #718096;
        margin-top: -0.25rem;
    }

    /* Search and Add Button Area */
    .search-area {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .search-input-container {
        flex-grow: 1;
        margin-right: 1rem;
        position: relative;
        max-width: 400px;
    }

        .search-input-container input {
            padding-left: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e2e8f0;
        }

    /* Add Entity Button */
    .btn-add-entity {
        background-color: #5d50e6;
        border-color: #5d50e6;
        padding: 0.5rem 1rem;
        font-weight: 500;
        display: flex;
        align-items: center;
    }

        .btn-add-entity:hover {
            background-color: #4a3eaf;
            border-color: #4a3eaf;
        }

    /* Table Styling */
    .table {
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th {
            color: #718096;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            border-bottom: 2px solid #e2e8f0;
            padding: 0.75rem 1rem;
            vertical-align: middle;
        }

        .table td {
            font-size: 0.9375rem;
            color: #2d3748;
            border-bottom: 1px solid #e2e8f0;
            padding: 1rem;
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background-color: #f7fafc;
        }

    /* Student/Course Cell Mockup (using circle for initials/icon) */
    .data-cell {
        display: flex;
        align-items: center;
    }

    .initials-circle {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #a0aec0;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-size: 1rem;
        font-weight: 500;
        margin-right: 0.75rem;
        flex-shrink: 0;
    }

    /* Grade/Degree Pill Styling */
    .pill {
        display: inline-block;
        padding: 0.2rem 0.6rem;
        border-radius: 9999px;
        font-weight: 700;
        font-size: 0.875rem;
        text-align: center;
        min-width: 50px;
    }

    .pill-high {
        background-color: #e6fffa; /* Green-ish for high grade */
        color: #38b2ac;
        border: 1px solid #b2f5ea;
    }

    .pill-mid {
        background-color: #fffbeb; /* Yellow-ish for mid grade */
        color: #d97706;
        border: 1px solid #fde68a;
    }

    .pill-low {
        background-color: #fef2f2; /* Red-ish for low grade */
        color: #dc2626;
        border: 1px solid #fecaca;
    }

    /* Action Buttons - Matching screenshot colors */
    .btn-sm {
        padding: 0.3rem 0.6rem;
        font-size: 0.875rem;
        margin-left: 0.25rem;
    }

    .btn-update {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
    }

    .btn-delete {
        background-color: #e53e3e;
        border-color: #e53e3e;
        color: white;
    }

    .btn-details {
        background-color: #38b2ac;
        border-color: #38b2ac;
    }

    /* DataTables Pagination Styling Fixes */
    .dataTables_filter {
        display: none !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border: 1px solid #e2e8f0;
        background-color: white;
        padding: 0.2rem 0.6rem;
        margin: 0 0.25rem;
        border-radius: 0.25rem;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current,
        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background-color: #5d50e6 !important;
            border-color: #5d50e6 !important;
            color: white !important;
        }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container my-5">
    <div class="main-card">

        <!-- HEADER SECTION -->
        <div class="header-content">
            <div class="header-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-patch-check-fill" viewBox="0 0 16 16">
                    <path d="M10.02 5.626a.5.5 0 0 1-.722-.058L5.783 9.417 4.31 8.243a.5.5 0 0 1-.363-.788l1.737-2.196a.5.5 0 0 1 .81-.044l2.84 3.784 1.488-1.579a.5.5 0 0 1 .058-.722z" />
                    <path d="m10.865 1.942 2.083 4.276a1.764 1.764 0 0 1 .403.88l.613 2.871a2.001 2.001 0 0 1-1.637 2.656 1.761 1.761 0 0 1-.954.218h-8.082a2 2 0 0 1-1.637-2.656l.613-2.871a1.764 1.764 0 0 1 .403-.88L5.135 1.942a2.001 2.001 0 0 1 3.73 0z" />
                </svg>
            </div>
            <div class="header-text">
                <h1>Course Enrollment Records</h1>
                <p>Manage student grades and course association details</p>
            </div>
        </div>

        <!-- SEARCH AND ADD BUTTON SECTION -->
        <div class="search-area">
            <div class="search-input-container">
                <!-- Custom Search Input, linked to DataTables via JS -->
                <input type="text"
                       id="globalSearch"
                       class="form-control"
                       placeholder="Search by student or course..." />
            </div>

            <a asp-action="Create" class="btn btn-primary btn-add-entity">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16" style="margin-right: 0.25rem;">
                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                </svg>
                Add Record
            </a>
        </div>

        <!-- DATA TABLE SECTION -->
        <table id="courseStudentsTable" class="table align-middle w-full">
            <thead>
                <tr>
                    <th style="width: 30%;">@Html.DisplayNameFor(model => model.First().Student.Name)</th>
                    <th style="width: 30%;">@Html.DisplayNameFor(model => model.First().Course.Name)</th>
                    <th style="width: 15%;">@Html.DisplayNameFor(model => model.First().Degree)</th>
                    <th style="width: 25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-search="@item.Student.Name">
                            <div class="data-cell">
                                <div class="initials-circle" style="background-color: #5d50e6;">
                                    @{
                                        var initial = item.Student.Name.Split(' ').FirstOrDefault()?.Substring(0, 1).ToUpper() ?? "S";
                                    }
                                    @initial
                                </div>
                                @Html.DisplayFor(modelItem => item.Student.Name)
                            </div>
                        </td>
                        <td data-search="@item.Course.Name">
                            @Html.DisplayFor(modelItem => item.Course.Name)
                        </td>
                        <td>
                            @{
                                var degreeValue = item.Degree;
                                string pillClass;

                                if (degreeValue >= 90) { pillClass = "pill-high"; }
                                else if (degreeValue >= 70) { pillClass = "pill-mid"; }
                                else { pillClass = "pill-low"; }
                            }
                            <span class="pill @pillClass">
                                @Html.DisplayFor(modelItem => item.Degree)
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-update text-white">
                                    <i class="fa-solid fa-pen-to-square me-1"></i>Update
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-delete text-white"
                                   onclick="return confirm('Are you sure you want to delete record for @item.Student.Name in @item.Course.Name?');">
                                    <i class="fa-solid fa-trash me-1"></i>Delete
                                </a>

                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-details text-white">
                                    <i class="fa-solid fa-eye me-1"></i>Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- DataTables Footer Injection Point -->
        <div id="dataTablesFooter" class="flex justify-between items-center px-0 py-4 border-t border-gray-200 mt-0">
            <!-- DataTables will inject length menu, info, and pagination here -->
        </div>

    </div>
</div>

@section Scripts {
    <!-- jQuery and DataTables are required -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTables
            var table = $('#courseStudentsTable').DataTable({
                // Paging and Searching are enabled by default
                pageLength: 10,
                paging: true,
                searching: true,
                order: [[0, 'asc']], // Order by Student Name

                // Custom DOM structure to hide default search and structure the footer
                // 'l'=length menu, 'i'=info, 'p'=pagination, 't'=table. 'f'=filter is omitted.
                dom: '<"top"r>t<"bottom"lip>',

                language: {
                    // Customizing text to fit the visual design
                    lengthMenu: '<div class="flex items-center gap-2 text-gray-600">Show _MENU_ per page</div>',
                    info: '<div class="text-gray-600">Showing _START_ to _END_ of _TOTAL_ records</div>',
                    paginate: {
                        previous: '<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" /></svg>',
                        next: '<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" /></svg>'
                    }
                }
            });

            // --- Connect Custom Search Input ---
            // This is crucial: it links the custom input field to DataTables' filtering mechanism.
            $('#globalSearch').on('keyup', function() {
                table.search(this.value).draw();
            });

            // --- Inject DataTables Footer Elements ---
            // Manually move the generated DataTables footer elements into our custom CSS/HTML container.
            $('#dataTablesFooter').append(
                table.tables().container().find('.dataTables_length'),
                table.tables().container().find('.dataTables_info').addClass('mx-4'),
                table.tables().container().find('.dataTables_paginate')
            );
        });
    </script>
}
